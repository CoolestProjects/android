<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>


    <style name="headerLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/header_bg</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/header_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/header_label_color</item>
        <item name="android:textSize">@dimen/header_text_size</item>
    </style>

    <style name="stgeBtnStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/stage_btn_text_size</item>
    </style>

    <style name="homeDescStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/home_desc_text_color</item>
        <item name="android:textSize">@dimen/home_desc_size</item>
    </style>

</resources>
