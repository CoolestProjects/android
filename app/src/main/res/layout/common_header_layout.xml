<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/home_header"/>

    <ImageView
        android:id="@+id/home_logo"
        android:layout_width="@dimen/home_logo_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/home_title_top_margin"
        android:layout_marginLeft="@dimen/home_title_left_margin"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/home_logo"/>


    <com.mttnow.coolestprojects.screens.fragments.ui.CustomTextView
        android:layout_width="@dimen/home_logo_text_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_logo"
        android:text="@string/home_title"
        android:textColor="@color/colorPrimaryLight"
        android:layout_marginLeft="@dimen/home_title_left_margin"
        android:layout_marginRight="@dimen/home_title_right_margin"
        android:layout_marginTop="@dimen/home_title_top_margin"
        android:textSize="@dimen/home_title_size"
        android:textAlignment="center"
        custom:font="OpenSans-Regular.ttf"/>


</RelativeLayout>
