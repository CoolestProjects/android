<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView android:id="@+id/summit_img"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

    <com.mttnow.coolestprojects.screens.fragments.ui.CustomTextView
        android:id="@+id/speaker_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/speaker_name_margin_top"
        android:gravity="center_horizontal"
        android:textColor="@color/speaker_name_color"
        android:textSize="@dimen/text_medium_size"
        custom:font="OpenSans-Regular.ttf"/>

    <com.mttnow.coolestprojects.screens.fragments.ui.CustomTextView
        android:id="@+id/speaker_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/speaker_desc_margin_bottom"
        android:gravity="center_horizontal"
        android:textColor="@color/speaker_desc_color"
        android:textSize="@dimen/text_medium_size"
        custom:font="OpenSans-Regular.ttf"/>

</LinearLayout>