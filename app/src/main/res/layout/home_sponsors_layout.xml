<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/home_content_bg"
    android:paddingTop="@dimen/home_desc_vertical_padding">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/contentWhiteBoxRoundedCornerStyle"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/sponsors_logo"
            android:layout_width="@dimen/icon_width"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/sponsors_icon"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/home_alphed_bg"/>


        <com.mttnow.coolestprojects.screens.fragments.ui.CustomTextView
            android:id="@+id/sponsor_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/home_sponsors_label"
            android:textStyle="bold"
            android:textColor="@color/home_content_text_color"
            android:textSize="@dimen/container_title_size"
            custom:font="OpenSans-Bold.ttf"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/content_container_margin">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TableRow  android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/content_inner_container_padding"/>
                <com.mttnow.coolestprojects.screens.fragments.ui.CustomTextView
                    android:id="@+id/diamond_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/diamond_desc"
                    android:textColor="@color/home_content_text_color"
                    custom:font="OpenSans-Regular.ttf"/>

                <TableRow
                    android:id="@+id/sponsor_row1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/intel_logo"
                        style="@style/sponsorLogoStyle"
                        android:src="@drawable/intel_logo" />

                    <ImageView
                        android:id="@+id/microsoft_logo"
                        style="@style/sponsorLogoStyle"
                        android:src="@drawable/microsoft_logo" />

                </TableRow>

                <TableRow  android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/content_inner_container_padding"/>
                <com.mttnow.coolestprojects.screens.fragments.ui.CustomTextView
                    android:id="@+id/platinum_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/platinum_desc"
                    android:textColor="@color/home_content_text_color"
                    custom:font="OpenSans-Regular.ttf"/>

                <TableRow
                    android:id="@+id/sponsor_row2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingTop="10dp">
                    <ImageView
                        android:id="@+id/openet_logo"
                        style="@style/sponsorLogoStyle"
                        android:src="@drawable/openet_logo" />

                    <ImageView
                        android:id="@+id/rte_logo"
                        style="@style/sponsorLogoStyle"
                        android:src="@drawable/rte_logo" />

                    <ImageView
                        android:id="@+id/mastercard_logo"
                        style="@style/sponsorLogoStyle"
                        android:src="@drawable/mastercard_logo" />

                    <ImageView
                        android:id="@+id/boi_logo"
                        style="@style/sponsorLogoStyle"
                        android:src="@drawable/boi_logo" />

                </TableRow>

                <TableRow
                    android:id="@+id/sponsor_row3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/symantec_logo"
                        style="@style/sponsorLogoStyle"
                        android:src="@drawable/symantec_logo" />

                    <ImageView
                        android:id="@+id/riot_logo"
                        style="@style/sponsorLogoStyle"
                        android:src="@drawable/riot_games_logo" />

                    <ImageView
                        android:id="@+id/tdl_logo"
                        style="@style/sponsorLogoStyle"
                        android:src="@drawable/travelport_digital" />

                    <ImageView
                        android:id="@+id/folens_logo"
                        style="@style/sponsorLogoStyle"
                        android:src="@drawable/folens_logo" />


                </TableRow>
                <TableRow  android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/content_inner_container_padding"/>
                <com.mttnow.coolestprojects.screens.fragments.ui.CustomTextView
                    android:id="@+id/gold_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/gold_desc"
                    android:textColor="@color/home_content_text_color"
                    custom:font="OpenSans-Regular.ttf"/>
                <TableRow
                    android:id="@+id/sponsor_row4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/virgin_media_logo"
                        style="@style/sponsorLogoStyle"
                        android:src="@drawable/virgin_media_logo" />

                    <ImageView
                        android:id="@+id/dublin_city_council_logo"
                        style="@style/sponsorLogoStyle"
                        />
                    <!--android:src="@drawable/dublin_city_council_logo"-->
                    <ImageView
                        android:id="@+id/faile_logo"
                        style="@style/sponsorLogoStyle"
                        android:src="@drawable/failte_ireland_sponsor" />


                    <ImageView
                        android:id="@+id/accenture_logo"
                        style="@style/sponsorLogoStyle"
                        android:src="@drawable/accenture_logo" />

                </TableRow>
                <TableRow
                    android:id="@+id/sponsor_row5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingTop="20dp"
                   >
                    <ImageView
                        android:id="@+id/liberty_it_logo"
                        style="@style/sponsorLogoStyle"
                        android:src="@drawable/liberty_it_logo" />

                    <ImageView
                        android:id="@+id/workday_logo"
                        style="@style/sponsorLogoStyle"
                        android:src="@drawable/workday_logo" />

                    <ImageView
                        android:id="@+id/zalando_logo"
                        style="@style/sponsorLogoStyle"
                        android:src="@drawable/zalando_logo" />

                    <ImageView
                        android:id="@+id/computer_futures_logo"
                        style="@style/sponsorLogoStyle"
                        android:src="@drawable/coder_dojo_foundation_logo" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingTop="20dp">

                    <ImageView
                        android:id="@+id/coderdojo_foundation_logo2"
                        style="@style/sponsorLogoStyle"
                        android:src="@drawable/coder_dojo_foundation_logo" />
                    <ImageView/>
                    <Button
                        android:id="@+id/load_sponsors_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/action_all_sponsors"
                        android:theme="@style/PrimaryButton"
                        android:clickable="true"/>

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
