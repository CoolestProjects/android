<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical">
    <com.mttnow.coolestprojects.screens.fragments.ui.CustomTextView
        android:id="@+id/edu_supporters_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edu_supporters_desc"
        android:textColor="@color/colorAccent"
        android:gravity="center_horizontal|center_vertical"
        custom:font="OpenSans-Bold.ttf" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical">
        <ImageView
            android:id="@+id/virgin_media_logo"
            style="@style/sponsorLogoStyle"
            android:src="@drawable/sponsors_virgin_media_logo" />

        <ImageView
            android:id="@+id/dublin_city_council_logo"
            style="@style/sponsorLogoStyle"
            android:src="@drawable/dublin_city_council_sponsor" />

        <ImageView
            android:id="@+id/accenture_logo"
            style="@style/sponsorLogoStyle"
            android:src="@drawable/sponsors_accenture_logo" />

        <ImageView
            android:id="@+id/liberty_it_logo"
            style="@style/sponsorLogoStyle"
            android:src="@drawable/sponsors_liberty_it_logo" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal|center_vertical">

        <ImageView
            android:id="@+id/faile_logo"
            style="@style/sponsorLogoStyle"
            custom:layout_widthPercent="30%"
            android:src="@drawable/sponsors_failte_ireland_logo" />

        <ImageView
            android:id="@+id/coderdojo_foundation_logo2"
            style="@style/sponsorLogoStyle"
            custom:layout_widthPercent="30%"
            android:src="@drawable/sponsors_coder_dojo_foundation_logo" />

        <Button
            android:id="@+id/load_sponsors_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/sponsorLogoStyle"
            custom:layout_widthPercent="40%"
            android:clickable="true"
            android:text="@string/action_all_sponsors"
            android:theme="@style/PrimaryButton" />
    </LinearLayout>

</LinearLayout>
