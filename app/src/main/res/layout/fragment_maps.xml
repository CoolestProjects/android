<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.mttnow.coolestprojects.screens.fragments.ui.CustomTextView
            style="@style/headerLabel"
            android:text="@string/rds_map_label"
            custom:font="OpenSans-Regular.ttf"/>

        <com.mttnow.coolestprojects.screens.fragments.ui.ZoomableImageView
            android:id="@+id/rds_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.mttnow.coolestprojects.screens.fragments.ui.CustomTextView
            style="@style/headerLabel"
            android:text="@string/parking_label"
            custom:font="OpenSans-Regular.ttf"/>

        <com.mttnow.coolestprojects.screens.fragments.ui.ZoomableImageView
            android:id="@+id/parking_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>